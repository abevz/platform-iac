server {
    listen 80;
    listen [::]:80;
    server_name homelab.{{ mailserver_domain | default("<your-domain>.com") }} harbor.{{ mailserver_domain | default("<your-domain>.com") }} wiki.{{ dev_domain | default("<your-dev-domain>.dev") }} gitlab.{{ mailserver_domain | default("<your-domain>.com") }} s3.minio.{{ mailserver_domain | default("<your-domain>.com") }} minio.{{ mailserver_domain | default("<your-domain>.com") }} plantuml.{{ dev_domain | default("<your-dev-domain>.dev") }};

    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 127.0.0.1:1443 ssl http2 proxy_protocol;
    server_name wiki.{{ dev_domain | default("<your-dev-domain>.dev") }};

    ssl_certificate /etc/letsencrypt/live/{{ dev_domain | default("<your-dev-domain>.dev") }}-wildcard/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ dev_domain | default("<your-dev-domain>.dev") }}-wildcard/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ dev_domain | default("<your-dev-domain>.dev") }}-wildcard/chain.pem;
    include conf.d/ssl-params.conf;
    include conf.d/gzip.conf;
    proxy_intercept_errors on;
    error_page 400 404 =404 /404.html;
    location = /404.html { root /var/www/html; }
    error_page 500 502 503 504 /50x.html;
    location = /50x.html { root /var/www/html; }

    location / {
        proxy_pass {{ nginx_proxy_upstreams.wiki_http }}/;
        include conf.d/proxy-params-websockets.conf;
    }
}

