version: '3.8'
services:
  reverseproxy:
    image: nginx:latest
    container_name: reverseproxy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
      - "2222:2222"
      - "22006:22006"
    volumes:
      - ./logs:/var/log/nginx
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./html:/var/www/html
      - ./nginx-conf:/etc/nginx/conf.d:ro
      - /etc/letsencrypt:/etc/letsencrypt:ro
      - /etc/ssl/certs:/etc/ssl/certs:ro
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
