# Example Proxmox Provider Secrets
# Copy this file to provider.sops.yml and fill in your real values
# Then encrypt with: sops -e -i provider.sops.yml

# Proxmox API endpoint
PROXMOX_VE_ENDPOINT: https://proxmox.example.com:8006

# Proxmox API token (create in Datacenter > Permissions > API Tokens)
PROXMOX_VE_API_TOKEN_ID: terraform@pam!your-token-name
PROXMOX_VE_API_TOKEN_SECRET: your-api-token-secret-here

# SSH credentials for node access
PROXMOX_VE_SSH_USERNAME: terraform
PROXMOX_VE_SSH_PRIVATE_KEY: |
  # Paste your SSH private key here (the one used to connect to Proxmox nodes)
  # Replace this entire comment block with your actual key content
