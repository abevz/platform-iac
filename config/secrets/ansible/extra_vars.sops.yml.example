# Ansible Extra Variables - EXAMPLE FILE
# Copy this file to extra_vars.sops.yml and fill with your real values
# Then encrypt with: sops -e -i extra_vars.sops.yml

# Cloudflare API token (for certbot DNS challenge)
cloudflare:
  api_token: your-cloudflare-api-token

# Pi-hole configuration
pihole:
  api_token: your-pihole-api-token
  hostname: pihole.example.com
  ip_address: 10.0.0.100

# Harbor registry configuration
harbor:
  hostname: harbor.example.com
  robot_token: your-harbor-robot-token

# MinIO S3 configuration (for ansible)
minio:
  endpoint: s3.minio.example.com
  root_user: your-minio-user
  root_password: your-minio-password

# Mailserver configuration
mailserver:
  domain: mail.example.com
  postmaster_email: postmaster@example.com
  acme_email: admin@example.com

# WireGuard configuration
wireguard:
  ui_password_hash: your-wireguard-password-hash

# Jenkins configuration
jenkins:
  admin_password: your-jenkins-admin-password

# Vault (HashiCorp) configuration
vault:
  root_token: your-vault-root-token
  unseal_key: your-vault-unseal-key

# VPN configuration
vpn:
  endpoint: vpn.example.com
  psk: your-vpn-pre-shared-key

# DNS configuration for certbot
dns:
  provider: cloudflare

# Tailscale configuration
tailscale:
  auth_key: your-tailscale-auth-key
